[core]
    editor = nvim
    autocrlf = input
[color]
    ui = true
[color "status"]
    changed = 166 bold
    untracked = 166 bold
    added = 46 bold
[color "diff"]
    old = 166 bold
    new = 46 bold

[difftool]
    prompt = true
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
